        var $collectionHolder;
        var $childCollectionHolder;

        // setup an "add a tag" link
        var $addProjectLink = $('<a href="#" class="add_project_link">Add a project</a>');
        var $newLinkDiv = $('<section></section>').append($addProjectLink);

        var $addCollaboratorLink = $('<a href="#" class="add_collaborator_link">Add a collaborator</a>');
        var $newLinkSpan = $('<span></span>').append($addCollaboratorLink);

        jQuery(document).ready(function() {
            // Get the ul that holds the collection of tags
            $collectionHolder = $('section.projects');
            $childCollectionHolder = $('span.collaborators');

            // add a delete link to all of the existing tag form li elements
            $collectionHolder.find('section').each(function() {
              addProjectFormDeleteLink($(this));
            });

            $childCollectionHolder.find('span').each(function() {
              addCollaboratorFormDeleteLink($(this));
            });

            // add the "add a tag" anchor and li to the tags ul
            $collectionHolder.append($newLinkDiv);
            $childCollectionHolder.append($newLinkSpan);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolder.data('index', $collectionHolder.find(':input').length);
            $childCollectionHolder.data('index', $childCollectionHolder.find(':input').length);

            $addProjectLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see next code block)
                addProjectForm($collectionHolder, $newLinkDiv);
            });

            $addCollaboratorLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see next code block)
                addCollaboratorForm($childCollectionHolder, $newLinkSpan);
            });
        });

        function addProjectForm($collectionHolder, $newLinkDiv) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype-project');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormDiv = $('<section></section>').append(newForm);
            $newLinkDiv.before($newFormDiv);

            // add a delete link to the new form
   addProjectFormDeleteLink($newFormDiv);
        }


        function addCollaboratorForm($collectionHolder, $newLinkSpan) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype-collaborator');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormSpan = $('<span></span>').append(newForm);
            $newLinkSpan.before($newFormSpan);

            // add a delete link to the new form
   addCollaboratorFormDeleteLink($newFormSpan);
        }

        function addProjectFormDeleteLink($projectFormDiv) {
    var $removeFormA = $('<a href="#">delete this project</a>');
    $projectFormDiv.append($removeFormA);

    $removeFormA.on('click', function(e) {
        // prevent the link from creating a "#" on the URL
        e.preventDefault();

        // remove the li for the tag form
        $projectFormDiv.remove();
    });
}

function addCollaboratorFormDeleteLink($collaboratorFormSpan) {
var $removeFormA = $('<a href="#">delete this collaborator</a>');
$collaboratorFormSpan.append($removeFormA);

$removeFormA.on('click', function(e) {
// prevent the link from creating a "#" on the URL
e.preventDefault();

// remove the li for the tag form
$collaboratorFormSpan.remove();
});
}


















